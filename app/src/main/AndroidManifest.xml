<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feng.test">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 注册文件关联 -->

            <!-- 自定义后缀 -->
            <!-- MIME协议文件 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!--所有文本类-->
                <data android:mimeType="text/*" />
                <!--pdf文件-->
                <data android:mimeType="application/pdf" />
                <!--魅族手机识别的协议-->
                <data android:mimeType="application/epub+zip" />
                <data android:mimeType="application/pdf" />
                <data android:mimeType="application/x-expandedbook" />

                <!--office文件-->
                <data android:mimeType="application/msword" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.wordprocessingml.template" />

                <data android:mimeType="application/vnd.ms-powerpoint" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.presentationml.presentation" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.presentationml.slideshow" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.presentationml.template" />

                <data android:mimeType="application/vnd.ms-excel" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.spreadsheetml.template" />
            </intent-filter>
            <!-- 自定义后缀 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.epub" />
                <data android:pathPattern=".*\\.ebk2" />
                <data android:pathPattern=".*\\.ebk3" />
                <data android:pathPattern=".*\\.chm" />
                <data android:pathPattern=".*\\.mobi" />
                <data android:pathPattern=".*\\.umd" />
                <!--日志文本类-->
                <data android:pathPattern=".*\\.log" />
                <data android:pathPattern=".*\\.trace" />
                <!--金山-->
                <data android:pathPattern=".*\\.wps" />
                <data android:pathPattern=".*\\.dps" />
                <data android:pathPattern=".*\\.et" />
            </intent-filter>
            <!--兼容三星写法-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.epub" />
                <data android:pathPattern=".*\\.ebk2" />
                <data android:pathPattern=".*\\.ebk3" />
                <data android:pathPattern=".*\\.chm" />
                <data android:pathPattern=".*\\.mobi" />
                <data android:pathPattern=".*\\.umd" />
                <!--日志文本类-->
                <data android:pathPattern=".*\\.log" />
                <data android:pathPattern=".*\\.trace" />
                <!--金山-->
                <data android:pathPattern=".*\\.wps" />
                <data android:pathPattern=".*\\.dps" />
                <data android:pathPattern=".*\\.et" />
            </intent-filter>


            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="content" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.wps" />
                <data android:pathPattern=".*\\.dps" />
                <data android:pathPattern=".*\\.et" />
            </intent-filter>
        </activity>

        <activity android:name=".LockScreenActivity" />
    </application>

</manifest>